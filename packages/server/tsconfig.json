{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "incremental": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "dist"
    ]
}
